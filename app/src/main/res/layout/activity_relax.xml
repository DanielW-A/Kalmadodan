<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sky"
    tools:context=".RelaxActivity">


    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="69dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_home_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        />


    <TextView
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick your
method..."
        android:textSize="30sp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/RelaxButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_record_voice_over_black_24dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:text="       Breathe"
        android:textSize="10sp"
        android:layout_below="@+id/TitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/MeditateButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_landscape_black_24dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:text="       Meditate"
        android:textSize="10sp"
        android:layout_below="@+id/RelaxButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/MusicButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/MeditateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_music_note_black_24dp"
        android:paddingRight="20dp"
        android:text="      Music"
        android:textSize="10sp"

        />


</RelativeLayout>