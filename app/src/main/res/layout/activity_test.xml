<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sky"
    tools:context=".TestActivity">


    <Button
        android:id="@+id/testHomeButton"
        android:layout_width="69dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_home_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        />

    <Button
        android:id="@+id/exit"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/ic_exit_to_app_black_24dp"
        android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
        android:padding="3dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="338dp"
        android:layout_height="340dp"
        android:layout_below="@+id/TitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="Graph"
        app:srcCompat="@android:drawable/screen_background_light_transparent" />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="103dp"
        android:layout_height="104dp"
        android:background="@drawable/circle_button"
        android:padding="3dp"
        android:text="submit"
        android:textSize="18sp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you?..."
        android:textSize="30sp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/Question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Question on anxiety"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Question on anxiety"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Question on anxiety"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Question4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Question on anxiety"
        android:textSize="18sp"
        android:visibility="visible" />

    <SeekBar
        android:id="@+id/seekBar1"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="28dp"
        android:layout_below="@+id/Question1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_below="@+id/seekBar1"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="130dp"
        android:textSize="17dp"/>

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="28dp"
        android:layout_below="@+id/Question2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_below="@+id/seekBar2"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="130dp"
        android:textSize="17dp"/>

    <SeekBar
        android:id="@+id/seekBar3"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="28dp"
        android:layout_below="@+id/Question3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar3"
        android:layout_below="@+id/seekBar3"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="130dp"
        android:textSize="17dp"/>

    <SeekBar
        android:id="@+id/seekBar4"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="28dp"
        android:layout_below="@+id/Question4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:max="10"
        android:progress="3" />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar4"
        android:layout_below="@+id/seekBar4"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="130dp"
        android:textSize="17dp"/>


</RelativeLayout>