<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sky"
    tools:context=".DataActivity">


    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="69dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_home_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        />

    <Button
        android:id="@+id/exit"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/ic_exit_to_app_black_24dp"
        android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
        android:padding="3dp" />


    <Button
        android:id="@+id/BackButton"
        android:layout_width="69dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_button"
        android:drawableEnd="@drawable/ic_arrow_back_black_24dp"
        android:drawableRight="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        />

    <Button
        android:id="@+id/SubmitButton"
        android:layout_width="135dp"
        android:layout_height="133dp"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_button"
        android:drawableTop="@drawable/ic_build_black_24dp"
        android:padding="3dp"
        android:text="Raw Data"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Progress"
        android:textSize="30sp"
        android:visibility="visible" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="342dp"
        android:layout_height="207dp"
        android:layout_below="@+id/TitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>


</RelativeLayout>